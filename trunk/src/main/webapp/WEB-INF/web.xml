<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	version="2.5">

	<!-- manage session live cycle  -->
	<listener>
		<listener-class>org.javlo.user.SessionListener</listener-class>
	</listener>

	<filter>
		<filter-name>CharsetFilter</filter-name>
		<filter-class>org.javlo.filter.CharsetFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>CharsetFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	
	<filter>
		<filter-name>CatchAll</filter-name>
		<filter-class>org.javlo.portlet.filter.CatchAllFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>CatchAll</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	
	<servlet>
		<servlet-name>AccessServlet</servlet-name>
		<servlet-class>org.javlo.servlet.AccessServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>AccessServlet</servlet-name>
		<url-pattern>/view/*</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>AccessServlet</servlet-name>
		<url-pattern>/preview/*</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>AccessServlet</servlet-name>
		<url-pattern>/edit/*</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>AccessServlet</servlet-name>
		<url-pattern>/path/*</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>AccessServlet</servlet-name>
		<url-pattern>/time/*</url-pattern>
	</servlet-mapping>
	
