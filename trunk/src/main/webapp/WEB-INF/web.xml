		<servlet-class>org.javlo.servlet.XMLServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>xml</servlet-name>
		<url-pattern>/xml/*</url-pattern>
	</servlet-mapping>

